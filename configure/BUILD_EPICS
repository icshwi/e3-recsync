
# One should define the any dependency modules and EPICS base path
# in the following directory

-include $(TOP)/$(E3_ENV_NAME)/epics-community-env


EPICS_MODULE_SRC_PATH2=$(EPICS_MODULE_SRC_PATH)/client

.PHONY: epics epics-clean

epics:
	$(QUIET)echo "EPICS_BASE=$(COMMUNITY_EPICS_BASE)"  > $(TOP)/$(EPICS_MODULE_SRC_PATH2)/configure/RELEASE
	$(QUIET)echo "CROSS_COMPILER_TARGET_ARCHS = "      > $(TOP)/$(EPICS_MODULE_SRC_PATH2)/configure/CONFIG_SITE	

	sudo -E bash -c "$(MAKE) -C $(EPICS_MODULE_SRC_PATH2)"

epics-clean:
	sudo -E bash -c "$(MAKE) -C $(EPICS_MODULE_SRC_PATH2) clean"

